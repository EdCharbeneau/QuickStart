@using Prototyping.Ipsum;
@using Prototyping.Placeholdit;
@{
    ViewBag.Title = "Team Efficiency";
}

<section id="main-section-header" class="row">
    <div class="col-sm-3">
        <h1>@ViewBag.Title</h1>
    </div>
    <div id="dateFilter" class="col-sm-9">
        <div class="period-wrapper">
            @Html.Label("Stats from")
            @Html.TextBox("StatsFrom")
        </div>
        <div class="period-wrapper">
            @Html.Label("Stats to")
            @Html.TextBox("StatsTo")
        </div>
    </div>
</section>

<section id="main-section-content" class="row">
    <nav id="employee-list" class="col-sm-2 hidden-xs">
        <h3>Team members</h3>
        @Html.Ipsum().ul()
    </nav>
    <article class="col-xs-10">
        <div class="row">
            <div id="employee-about" class="col-xs-12 col-sm-4">
                @Html.Placehold(60, 60)
                <p>First Name, Last Name</p>
            </div>
            <div class="col-xs-12 col-sm-4">
                @Html.Placehold(430, 120, "Chart", null, null, new { @class = "image-responsive" })
            </div>
            <div class="col-xs-12 col-sm-4">
                @Html.Placehold(430, 120, "Chart", null, null, new { @class = "image-responsive" })
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <h3>Representative orders - schedule</h3>
                @Html.Ipsum().table(5, 3, "d,t,n", new { @class = "table table-striped table-bordered" })
            </div>
        </div>
    </article>
</section>